# edit the "button =" part for each entry according to your remote, and stick
# this stuff in ~/.lircrc

begin
	prog = Rhythmbox
	remote = *
	button = KEY_PLAY
	repeat = 1
	config = play
end

begin
	prog = Rhythmbox
	remote = *
	button = KEY_PAUSE
	repeat = 0
	config = pause
end

begin
	prog = Rhythmbox
	remote = *
	button = KEY_PLAYPAUSE
	repeat = 1
	config = playpause
end

begin
	prog = Rhythmbox
	remote = *
	button = KEY_STOP
	repeat = 1
	config = stop
end

