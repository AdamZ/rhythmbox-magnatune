<Root>

<commands>

	<cmd name="Previous"
	     pixtype="stock"
	     pixname="rhythmbox-previous"
	     _tip="Go to the previous track"
	     priority="1"/>
	     
	<cmd name="Play"
	     pixtype="stock"
	     pixname="rhythmbox-play"
	     _tip="Start playing"
	     priority="1"/>

	<cmd name="Pause"
	     pixtype="stock"
	     pixname="rhythmbox-pause"
	     _tip="Pause playing"
	     priority="1"/>

	<cmd name="Stop"
	     pixtype="stock"
	     pixname="rhythmbox-stop"
	     _tip="Stop playing"
	     priority="1"/>

	<cmd name="Next"
	     pixtype="stock"
	     pixname="rhythmbox-next"
	     _tip="Go to the next track"
	     priority="1"/>

	<cmd name="Shuffle"
	     pixtype="stock"
	     pixname="rhythmbox-shuffle"
	     _tip="Toggle random playing order"
	     priority="1"
	     type="toggle"/>

	<cmd name="Repeat"
	     pixtype="stock"
	     pixname="rhythmbox-repeat"
	     _tip="Toggle repeat mode"
	     priority="1"
	     type="toggle"/>

	<cmd name="Cut"
	     pixtype="stock"
	     pixname="gtk-cut"
	     _tip="Cut selection"/>

	<cmd name="Copy"
	     pixtype="stock"
	     pixname="gtk-copy"
	     _tip="Copy selection"/>

	<cmd name="Paste"
	     pixtype="stock"
	     pixname="gtk-paste"
	     _tip="Paste selection"/>

	<cmd name="About"
	     pixtype="stock"
	     pixname="gnome-stock-about"
	     _tip="Show information about Rhythmbox"/>

	<cmd name="Quit"
	     pixtype="stock"
	     pixname="gtk-quit"
	     _tip="Quit Rhythmbox"/>

	<cmd name="MusicFolders"
	     pixtype="stock"
	     pixname="gtk-preferences"
	     _tip="Specify where Rhythmbox should look for music"/>

	<cmd name="NewGroup"
	     pixtype="stock"
	     pixname="gtk-new"
	     _tip="Create a new music group"/>

	<cmd name="AddToLibrary"
	     pixtype="stock"
	     pixname="gtk-open"
	     _tip="Choose a file to be added to the library"/>

</commands>

<menu>

<submenu name="File" _label="_File">
        
        <menuitem name="NewGroup" verb="NewGroup" _label="_New Group"/>

	<placeholder name="SourceMenu"/>

	<separator/>

        <menuitem name="AddToLibrary" verb="AddToLibrary" _label="_Add to Library..."/>

	<placeholder name="FileMenu"/>

	<separator/>

        <menuitem name="Quit" verb="Quit" _label="_Quit" accel="*Control*q"/>

</submenu>

<submenu name="Edit" _label="_Edit">

        <menuitem name="Cut" verb="Cut" _label="Cu_t" accel="*Control*x"/>
	
        <menuitem name="Copy" verb="Copy" _label="_Copy" accel="*Control*c"/>
	
        <menuitem name="Paste" verb="Paste" _label="_Paste" accel="*Control*v"/>
	
	<separator/> 

	<placeholder name="EditMenu"/>

	<menuitem name="MusicFolders" _label="_Music Folders..." verb="MusicFolders"/>

</submenu>

<submenu name="Controls" _label="_Controls">

	<menuitem name="Play" _label="_Play" verb="Play" accel="*Control*space"/>

	<separator/>

	<menuitem name="Next" _label="_Next Song" verb="Next" accel="*Control*n"/>

	<menuitem name="Previous" _label="P_revious Song" verb="Previous" accel="*Control*p"/>

	<separator/>
	
	<menuitem name="Shuffle" _label="_Shuffle" verb="Shuffle" accel="*Control*s"/>
	
	<menuitem name="Repeat" _label="_Repeat" verb="Repeat" accel="*Control*r"/>

</submenu>

<placeholder name="ActionsMenu"/>

<submenu name="Help" _label="_Help">

        <menuitem name="About" verb="About" _label="_About"/>

</submenu>

</menu>

<dockitem name="Toolbar" behavior="exclusive" config="0">

	<toolitem name="Prevous" _label="Previous" verb="Previous"/>

	<toolitem name="Play" _label="Play" verb="Play"/>

	<toolitem name="Next" _label="Next" verb="Next"/>

	<separator/>

        <toolitem name="Shuffle" _label="Shuffle" verb="Shuffle"/> 

</dockitem>

</Root>
