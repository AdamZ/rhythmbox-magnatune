<Root>

<commands>

  <cmd name="SelectAll"
       _tip="Select all songs"/>

  <cmd name="SelectNone"
       _tip="Deselect all songs"/>

  <cmd name="CurrentSong"
       _tip="Scroll the view to the currently playing song"
       pixtype="stock"
       pixname="gtk-jump-to"/>

  <cmd name="ShowBrowser"
       _tip="Change the visibility of the artist and album browser"
       type="toggle"/>

</commands>

<menu>

<submenu name="Edit" _label="_Edit">

  <placeholder name="EditMenu">

    <separator/>

    <menuitem name="SelectAll" verb="SelectAll" _label="Select _All" accel="*Control*a"/>

  </placeholder>

</submenu>


<submenu name="View" _label="_View">

  <placeholder name="ViewMenu">

    <menuitem name="ShowBrowser" verb="ShowBrowser" _label="_Browser" accel="F7"/>
    
    <separator/>

    <menuitem name="CurrentSong" verb="CurrentSong" _label="_Jump to Playing Song" accel="*Control*j"/>

  </placeholder>
 
</submenu>

</menu>

</Root>
