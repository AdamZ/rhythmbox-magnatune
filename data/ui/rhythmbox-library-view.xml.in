<Root>

<commands>

  <cmd name="SelectAll"
       _tip="Select all songs"/>

  <cmd name="SelectNone"
       _tip="Deselect all songs"/>

  <cmd name="CurrentSong"
       _tip="Scroll the view to the currently playing song"
       pixtype="stock"
       pixname="gtk-jump-to"/>

  <cmd name="ShowBrowser"
       _tip="Toggle the artist and album browser visibility"
       type="toggle"/>

</commands>

<menu>

<submenu name="Edit" _label="_Edit">

  <placeholder name="EditMenu">

    <menuitem name="SelectAll" verb="SelectAll" _label="Select _All" accel="*Control*a"/>

    <menuitem name="SelectNone" verb="SelectNone" _label="Select _None"/>

    <separator/>
  
  </placeholder>

</submenu>

<placeholder name="ActionsMenu">

  <submenu name="View" _label="_View">
  
    <menuitem name="CurrentSong" verb="CurrentSong" _label="Jump to _Current Song" accel="*Control*j"/>

    <separator/>

    <menuitem name="ShowBrowser" verb="ShowBrowser" _label="Show _Browser" accel="*Control*b"/>
    
  </submenu>
  
</placeholder>

</menu>

</Root>
