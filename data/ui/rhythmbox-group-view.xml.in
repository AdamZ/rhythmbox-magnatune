<Root>

<commands>

  <cmd name="SelectAll"
       _tip="Select all songs"/>

  <cmd name="SelectNone"
       _tip="Deselect all songs"/>

  <cmd name="CurrentSong"
       _tip="Scroll the view to the currently playing song"
       pixtype="stock"
       pixname="gtk-jump-to"/>

  <cmd name="RenameGroup"
       _tip="Rename the currently selected music group"/>

  <cmd name="DeleteGroup"
       _tip="Delete the currently selected music group"
       pixtype="stock"
       pixname="gtk-delete"/>

  <cmd name="SLPaste"
   _label="_Paste"
   _tip="Paste selection"
   pixtype="stock" pixname="gtk-paste"/>
 
</commands>

<menu>

<submenu name="File">

  <placeholder name="SourceMenu">

    <menuitem name="RenameGroup" verb="RenameGroup" _label="_Rename Group..." accel="F2"/>
    
    <menuitem name="DeleteGroup" verb="DeleteGroup" _label="_Delete Group"/>

  </placeholder>

</submenu>

<submenu name="Edit" _label="_Edit">

  <placeholder name="EditMenu">

    <separator/>

    <menuitem name="SelectAll" verb="SelectAll" _label="Select _All" accel="*Control*a"/>

  </placeholder>

</submenu>

<submenu name="View" _label="_View">

  <placeholder name="ViewMenu">

    <separator/>

    <menuitem name="CurrentSong" verb="CurrentSong" _label="_Jump to Playing Song" accel="*Control*j"/>

  </placeholder>

</submenu>

</menu>

<popups>
  <popup name="GroupSongsList">
    <menuitem name="SLCut"
     _label="Cu_t"
     _tip="Cut selection"
     pixtype="stock" pixname="gtk-cut"
     verb=""/>
    <menuitem name="SLCopy"
     _label="_Copy"
     _tip="Copy selection"
     pixtype="stock" pixname="gtk-copy"
     verb=""/>
     <menuitem name="SLPaste"
     verb="SLPaste"/>
    <menuitem name="SLDelete"
     _label="_Delete"
     _tip="Delete selection"
     pixtype="stock" pixname="gtk-delete"
     verb=""/>
    <separator/>
    <menuitem name="SLProperties"
     _label="P_roperties"
     _tip="Show information on the selected song"
     pixtype="stock" pixname="gtk-properties"
     verb=""/>  
  </popup>
</popups>

</Root>
