<Root>

<commands>

  <cmd name="SelectAll"
       _tip="Select all songs"/>

  <cmd name="SelectNone"
       _tip="Deselect all songs"/>

  <cmd name="CurrentSong"
       _tip="Scroll the view to the currently playing song"
       pixtype="stock"
       pixname="gtk-jump-to"/>

  <cmd name="SongInfo"
       _tip="Show information on the selected song"
       pixtype="stock"
       pixname="gtk-properties"/>

  <cmd name="RenameGroup"
       _tip="Rename the currently selected music group"/>

  <cmd name="DeleteGroup"
       _tip="Delete the currently selected music group"
       pixtype="stock"
       pixname="gtk-delete"/>

</commands>

<menu>

<submenu name="File" _label="_File">

  <placeholder name="SourceMenu">

    <menuitem name="RenameGroup" verb="RenameGroup" _label="_Rename Group..."/>
    
    <menuitem name="DeleteGroup" verb="DeleteGroup" _label="_Delete Group"/>

  </placeholder>

  <placeholder name="FileMenu">

    <menuitem name="SongInfo" verb="SongInfo" _label="Song _Information..." accel="*Control*i"/>

  </placeholder>
  
</submenu>

<submenu name="Edit" _label="_Edit">

  <placeholder name="EditMenu">

    <menuitem name="SelectAll" verb="SelectAll" _label="Select _All" accel="*Control*a"/>

    <menuitem name="SelectNone" verb="SelectNone" _label="Select _None"/>

    <separator/>
  
  </placeholder>

</submenu>

<placeholder name="ActionsMenu">

  <submenu name="View" _label="_View">
  
    <menuitem name="CurrentSong" verb="CurrentSong" _label="_Jump to Playing Song" accel="*Control*j"/>

  </submenu>
  
</placeholder>

</menu>

</Root>
