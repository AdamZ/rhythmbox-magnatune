<Root>

<commands>

  <cmd name="CurrentStation"
       _tip="Scroll the view to the currently playing station"
       pixtype="stock"
       pixname="gtk-jump-to"/>

  <cmd name="StationInfo"
       _tip="Show information on the selected station"
       pixtype="stock"
       pixname="gtk-properties"/>

  <cmd name="ShowBrowser"
       _tip="Change the visibility of the genre browser"
       type="toggle"/>

</commands>

<menu>

<submenu name="Edit" _label="_Edit">

  <placeholder name="EditMenu">
    <menuitem name="NewStation" verb="NewStation" _label="_New Internet Radio Station" accel="*Control*i"/>
  </placeholder>

</submenu>

<submenu name="View" _label="_View">

  <placeholder name="ViewMenu">

    <menuitem name="ShowBrowser" verb="ShowBrowser" _label="_Browser" accel="F7"/>
    
    <separator/>

    <menuitem name="CurrentStation" verb="CurrentStation" _label="_Jump to Playing Station" accel="*Control*j"/>

  </placeholder>
 
</submenu>

</menu>

</Root>
