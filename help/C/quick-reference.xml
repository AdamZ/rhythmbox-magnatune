<?xml version="1.0" ?>
<sect1 id="quick-reference">
  <title>Keyboard Shortcuts</title>

  <informaltable frame="none">
    <tgroup cols="2" colsep="0" rowsep="0">
    <colspec colname="COLSPEC0" colwidth="30*"/>
    <colspec colname="COLSPEC1" colwidth="70*"/>
    <tbody>
      <row>
        <entry>
<shortcut>
  <keycombo><keycap>Ctrl</keycap><keycap>N</keycap></keycombo>
 </shortcut>
        </entry>
        <entry>
          <para>New group</para>
        </entry>
      </row>
      <row>
        <entry>
<shortcut>
  <keycombo><keycap>Ctrl</keycap><keycap>O</keycap></keycombo>
 </shortcut>

        </entry>
        <entry>
          <para>Add to library</para>
        </entry>
      </row>
      <row>
        <entry>
<shortcut>
  <keycombo><keycap>Ctrl</keycap><keycap>Q</keycap></keycombo>
 </shortcut>

        </entry>
        <entry>
          <para>Quit application</para>
        </entry>
      </row>


      <row>
        <entry>
<shortcut>
  <keycombo><keycap>Ctrl</keycap><keycap>P</keycap></keycombo>
 </shortcut>

        </entry>
        <entry>
          <para>Properties</para>
        </entry>
      </row>

      <row>
        <entry>
<shortcut>
  <keycombo><keycap>Ctrl</keycap><keycap>J</keycap></keycombo>
 </shortcut>

        </entry>
        <entry>
          <para>Jump to playing song</para>
        </entry>
      </row>

      <row>
        <entry>
<shortcut>
  <keycombo><keycap>Ctrl</keycap><keycap>A</keycap></keycombo>
 </shortcut>

        </entry>
        <entry>
          <para>Select All</para>
        </entry>
      </row>

      <row>
        <entry>
<shortcut>
  <keycombo><keycap>Ctrl</keycap><keycap>Space</keycap></keycombo>
 </shortcut>

        </entry>
        <entry>
          <para>Play / Pause</para>
        </entry>
      </row>

      <row>
        <entry>
<shortcut>
  <keycombo><keycap>Ctrl</keycap><keycap>Left</keycap></keycombo>
 </shortcut>

        </entry>
        <entry>
          <para>Previous Track</para>
        </entry>
      </row>

      <row>
        <entry>
<shortcut>
  <keycombo><keycap>Ctrl</keycap><keycap>Right</keycap></keycombo>
 </shortcut>

        </entry>
        <entry>
          <para>Next Track</para>
        </entry>
      </row>

      <row>
        <entry>
<shortcut>
  <keycombo><keycap>Ctrl</keycap><keycap>R</keycap></keycombo>
 </shortcut>

        </entry>
        <entry>
          <para>Restart</para>
        </entry>
      </row>

      <row>
        <entry>
<shortcut>
  <keycombo><keycap>Ctrl</keycap><keycap>S</keycap></keycombo>
 </shortcut>

        </entry>
        <entry>
          <para>Shuffle play</para>
        </entry>
      </row>

<row>
        <entry>
<shortcut>
<keycap>F2</keycap>
 </shortcut>
        </entry>
        <entry>
          <para>Rename group</para>
        </entry>
      </row>

    </tbody>
    </tgroup>
  </informaltable>
</sect1>